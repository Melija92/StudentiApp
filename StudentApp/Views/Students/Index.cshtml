@model IEnumerable<EF.Student>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Dodaj studenta", "Create")
</p>
<div class="col-sm-8">
    <input type="text" class="form-control" placeholder="Search">
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Ime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Prezime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.JMBAG)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fakultet.Naziv)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Ime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Prezime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.JMBAG)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Fakultet.Naziv)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.StudentId }) |
                    @Html.ActionLink("Details", "Details", new { id = item.StudentId }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.StudentId })
                </td>
            </tr>
        }
    </table>
    <p id="demo"></p>
</div>
<div class="col-sm-4"><img class="img-responsive" src="~/Content/Slike/fakultet1.jpg"</div>
    <p>
        @Html.ActionLink("Dodaj novi fakultet", "Create", "Fakultets")
    </p>